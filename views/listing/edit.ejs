<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
    <h3>Edit your   Listing</h3>
    <form method="post" action="/listings/<%= listing._id %>?_method=PUT"
         novalidate 
         class="needs-validation" 
         enctype="multipart/form-data">
 
    <div class="mb-3" > 
        <label for="title" class="form-level">Title : </label>
        <input type="text" class="form-control"  required name="listing[title]" value="<%=listing.title %> ">  
        <div class="valid-feedback">Tittle looks good</div>
    </div>

    <div class="mb-3"> 
        <label for="description" class="form-level">Description : </label>
        <textarea name="listing[description]" class="form-control" required> <%=listing.description %> </textarea>
        <div class="invalid-feedback">Please enter a short description</div>
    </div>
    <div class="mb-3 "> 
        Original Listing Image<br/>
        <img src="<%= originalImageUrl %>" alt="" srcset="">
    </div>

    <div class="mb-3 "> 
        <label for="Image" class="form-level"> Upload New Image: </label>
        <input  name="listing[image]" class="form-control"  type="file"  value="<%=listing.image.url %>" > 
        <div class="invalid-feedback">Please Enter a image link</div>
    </div>
    <div class="row ">
        <div class="mb-3 col-md-4"> 
            <label for="price" class="form-level">Price : </label>
            <input type="number" class="form-control" required name="listing[price]" value="<%=listing.price %>">
            <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-level">Country : </label>
            <input type="text" class="form-control" required name="listing[country]" value="<%=listing.country %>"> 
            <div class="invalid-feedback">Country name should be valid</div>
        </div>
    </div>


    <div class="mb-3 "> 
        <label for="location" class="form-level">Location : </label>
        <input type="text"class="form-control" name="listing[location]" required value="<%=listing.location %>"> 
        <div class="invalid-feedback">Location name should be valid</div>
    </div>
    
 <button class="btn btn-dark edit-btn mt-3">Edit</button>
    <br><br>
    
    </form>
</body>
</div>
</div>
